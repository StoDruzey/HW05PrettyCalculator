<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A29999">

    <TextView
        android:id="@+id/display_field"
        style="@style/display_field"
        android:text=""
        android:background="@drawable/text_frame_style"/>

    <TextView
        android:id="@+id/memory_field"
        style="@style/memory_field"
        android:background="@drawable/text_frame_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/button_memory_clear"
                style="@style/memory_button"
                android:text="MC" />

            <Button
                android:id="@+id/button_bracket_left"
                style="@style/number_button"
                android:text="(" />

            <Button
                android:id="@+id/button_bracket_right"
                style="@style/number_button"
                android:text=")" />

            <Button
                android:id="@+id/button_del"
                style="@style/del_button"
                android:drawableEnd="@drawable/baseline_backspace_40"/>

            <Button
                android:id="@+id/button_cancel"
                style="@style/cancel_button"
                android:text="C" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/button_memory_read"
                style="@style/memory_button"
                android:text="MR" />

            <Button
                android:id="@+id/button_7"
                style="@style/number_button"
                android:text="7" />

            <Button
                android:id="@+id/button_8"
                style="@style/number_button"
                android:text="8" />

            <Button
                android:id="@+id/button_9"
                style="@style/number_button"
                android:text="9" />

            <Button
                android:id="@+id/button_div"
                style="@style/action_button"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/button_memory_plus"
                style="@style/memory_button"
                android:text="M+" />

            <Button
                android:id="@+id/button_4"
                style="@style/number_button"
                android:text="4" />

            <Button
                android:id="@+id/button_5"
                style="@style/number_button"
                android:text="5" />

            <Button
                android:id="@+id/button_6"
                style="@style/number_button"
                android:text="6" />

            <Button
                android:id="@+id/button_mult"
                style="@style/action_button"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/button_memory_minus"
                style="@style/memory_button"
                android:text="M-" />

            <Button
                android:id="@+id/button_1"
                style="@style/number_button"
                android:text="1" />

            <Button
                android:id="@+id/button_2"
                style="@style/number_button"
                android:text="2" />

            <Button
                android:id="@+id/button_3"
                style="@style/number_button"
                android:text="3" />

            <Button
                android:id="@+id/button_minus"
                style="@style/action_button"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/button_hist"
                style="@style/memory_button"
                android:drawableEnd="@drawable/baseline_format_list_numbered_36"/>

            <Button
                android:id="@+id/button_0"
                style="@style/number_button"
                android:text="0" />

            <Button
                android:id="@+id/button_dot"
                style="@style/number_button"
                android:text="." />

            <Button
                android:id="@+id/button_equal"
                style="@style/action_button"
                android:text="=" />

            <Button
                android:id="@+id/button_plus"
                style="@style/action_button"
                android:text="+" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>